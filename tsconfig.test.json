{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "output/test",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": [
        "src/**/*.ts",
        "tests/unit/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "output"
    ]
}