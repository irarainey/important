{
  "name": "important",
  "displayName": "Important",
  "description": "A Visual Studio Code extension to validate and format Python import statements according to the Google Python Style Guide.",
  "icon": "resources/images/logo.png",
  "version": "0.0.4",
  "publisher": "irarainey",
  "author": {
    "name": "Ira Rainey",
    "email": "ira.rainey@microsoft.com"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/irarainey/important"
  },
  "galleryBanner": {
    "color": "#3a3d41",
    "theme": "dark"
  },
  "keywords": [
    "python",
    "imports",
    "linter",
    "formatter",
    "google-style"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/irarainey/important/blob/main/README.md",
  "activationEvents": [
    "onLanguage:python",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "important.fixImports",
        "title": "Fix Imports in This File",
        "category": "Important"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "important.fixImports",
          "when": "editorLangId == python",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Important",
      "properties": {
        "important.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate imports when a Python file is saved."
        },
        "important.validateOnType": {
          "type": "boolean",
          "default": true,
          "description": "Validate imports as you type and when the document is modified by formatters or other tools."
        },
        "important.styleGuide": {
          "type": "string",
          "default": "google",
          "enum": [
            "google"
          ],
          "enumDescriptions": [
            "Google Python Style Guide"
          ],
          "description": "The style guide to use for import validation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile:tsc": "tsc -p ./",
    "pretest": "npm run compile:tsc",
    "lint": "eslint src --ext ts",
    "package": "npm run compile && mkdir -p package && vsce package --no-dependencies -o package/"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}